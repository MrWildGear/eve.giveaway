[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    dist,
    build,
    .github
ignore = 
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (common in __init__.py)
    F403,  # wildcard import
    E722   # do not use bare except
per-file-ignores =
    __init__.py:F401
